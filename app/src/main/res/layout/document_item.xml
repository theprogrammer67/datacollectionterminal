<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dctDocument"
            type="ru.rarus.datacollectionterminal.db.DocumentHeader" />

        <variable
            name="docDate"
            type="String" />
    </data>

    <LinearLayout
        android:id="@+id/itmMaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{dctDocument.description}"
            android:textColor="@color/black"
            tools:text="Новый документ" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@{`№ ` + dctDocument.number}"
            android:textColor="@color/black"
            tools:text="№ 123" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@{`от ` + docDate}"
            android:textColor="@color/black"
            tools:text="от 19.12.2020 20:50" />

        <CheckBox
            android:id="@+id/chbSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="@{dctDocument.selected}" />

    </LinearLayout>
</layout>